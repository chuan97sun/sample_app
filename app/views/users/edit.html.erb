<% provide :title, t(".edittitle") %>
<% provide :button_text, t(".editcreate") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".change_button"), Settings.source.collection.gravatar_link , target: "_blank" %>
    </div>
  </div>
</div>
